{
	"name": "mamd-analytical",
	"productName": "MaMD Analytical",
	"version": "0.4.1",
	"description": "MaMDAnalytical uses an artificial neural network (aNN) to classify an unknown cranium into a reference group.",
	"license": "",
	"repository": "rer145/mamd-analytical",
	"author": {
		"name": "Ron Richardson",
		"email": "ron.richardson@gmail.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"start": "electron .",
		"pack": "node build/dist/build-app.js --dir",
		"dist-win": "node build/dist/build-app.js --win",
		"dist-mac": "node build/dist/build-app.js --mac",

		"travis-pack": "electron-builder --dir",
		"travis-dist": "electron-builder --macos --windows -p always",
		"travis-dist-win": "electron-builder --windows -p always",
		"travis-dist-mac": "electron-builder --macos -p always"

	},
	"dependencies": {
		"bootstrap": "^4.3.1",
		"chart.js": "^2.9.2",
		"chartjs-plugin-colorschemes": "^0.4.0",
		"electron-context-menu": "^0.12.1",
		"electron-debug": "^3.0.0",
		"electron-log": "^3.0.9",
		"electron-notarize": "^0.2.1",
		"electron-progressbar": "^1.2.0",
		"electron-settings": "^3.2.0",
		"electron-store": "^3.3.0",
		"electron-unhandled": "^2.2.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.11.0",
		"electron-window-state": "^5.0.3",
		"find": "^0.3.0",
		"fs": "0.0.1-security",
		"jquery": "^3.4.1",
		"popper.js": "^1.15.0",
		"q": "^1.5.1",
		"sudo-prompt": "^9.0.0",
		"tether": "^1.4.6"
	},
	"devDependencies": {
		"@fortawesome/fontawesome-free": "^5.9.0",
		"electron": "^5.0.3",
		"electron-builder": "^20.43.0"
	},
	"build": {
		"appId": "edu.msu.MaMDAnalytical",
		"productName": "MaMD Analytical",
		"copyright": "Copyright 2020 ${author}",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "rer145",
				"repo": "mamd-analytical"
			}
		],
		"win": {
			"icon": "build/icon.ico",
			"verifyUpdateCodeSignature": false,
			"extraResources": [
				{
					"from": "./build/R-Portable/R-Portable-Win",
					"to": "R-Portable"
				},
				{
					"from": "./build/scripts",
					"to": "scripts"
				},
				{
					"from": "./build/setup",
					"to": "setup"
				}
			]
		},
		"mac": {
			"category": "public.app-category.education",
			"darkModeSupport": false,
			"icon": "build/icon.icns",
			"extraResources": [
				{
					"from": "./build/R-Portable/R-Portable-Mac",
					"to": "R-Portable"
				},
				{
					"from": "./build/scripts",
					"to": "scripts"
				}
			]
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		}
	}
}
